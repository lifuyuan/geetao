<h1>Listing purchasings</h1>

<table>
  <thead>
    <tr>
      <th>Item type</th>
      <th>Item name</th>
      <th>Item desc</th>
      <th>Url</th>
      <th>Arrival time start</th>
      <th>Arrival time end</th>
      <th>Item price desc</th>
      <th>Remuneration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchasings.each do |purchasing| %>
      <tr>
        <td><%= purchasing.item_type %></td>
        <td><%= purchasing.item_name %></td>
        <td><%= purchasing.item_desc %></td>
        <td><%= purchasing.url %></td>
        <td><%= purchasing.arrival_time_start %></td>
        <td><%= purchasing.arrival_time_end %></td>
        <td><%= purchasing.item_price_desc %></td>
        <td><%= purchasing.remuneration %></td>
        <td><%= link_to 'Show', trip_purchasing_path(@trip, purchasing) %></td>
        <td><%= link_to 'Edit', edit_trip_purchasing_path(@trip, purchasing) %></td>
        <td><%= link_to 'Destroy', [@trip,purchasing], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

