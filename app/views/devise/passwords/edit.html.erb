<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.hidden_field :reset_password_token %>
      <div class="login">
        <div class="login-screen">
          <div class="login-icon">
            <%= image_tag "login/icon.png"%>
            <h4><small>重置您的密码</small></h4>
          </div>

          <div class="login-form">
            <div class="form-group">
              <%= f.password_field :password, autocomplete: "off", class: "form-control login-field", placeholder: "新的密码，不少于8位" %>
              <label class="login-field-icon fui-lock" for="user_password"></label>
              <% if resource.errors.any? && resource.errors[:password].count > 0%>
                <span class="ValidationErrors"><%= resource.errors[:password].first%></span>
              <% end %>
            </div>

            <div class="form-group">
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control login-field", placeholder: "密码确认" %>
              <label class="login-field-icon fui-lock" for="user_password_confirmation"></label>
              <% if resource.errors.any? && resource.errors[:password_confirmation].count > 0%>
                <span class="ValidationErrors"><%= resource.errors[:password_confirmation].first%></span>
              <% end %>
            </div>
            <%= f.submit "更新我的密码", class: "btn btn-primary btn-lg btn-block" %>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
<% end %>

<script type="text/javascript">
  /* <![CDATA[ */
  jQuery(function(){
    jQuery("#user_password").validate({
      expression: "if (VAL) return true; else return false;",
      message: "请输入您的密码"
    });
    jQuery("#user_password").validate({
      expression: "if (VAL.length >= 8) return true; else return false;",
      message: "密码长度不能少于8位"
    });
    jQuery("#user_password_confirmation").validate({
      expression: "if (VAL) return true; else return false;",
      message: "请输入您的密码确认"
    });
    jQuery("#user_password_confirmation").validate({
      expression: "if (VAL==$('#user_password').val()) return true; else return false;",
      message: "密码确认必须与密码一致"
    });
  });
  /* ]]> */
</script>