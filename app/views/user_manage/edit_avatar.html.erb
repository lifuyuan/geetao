<%= image_tag @user.avatar_url(:small) %>
<%= form_for(@user, :url =>"/update_avatar") do |f| %>
<div class="field">
<%= f.label '上传头像:'%>&nbsp;&nbsp;<br />
<%= f.file_field :avatar, :style => 'border:0.5px solid blue;color:red;background:white;font:bold 12px; height:25px; width:250px' %>
</div>
<br/>
<div class="actions">
<%= f.submit "保存头像" ,class:"rc-button rc-button-submit"%>
</div>
<% end %>